= render 'layouts/header'
.container
  .content.row
    .col-md-2.col-xs-12#navmenu
      = render 'layouts/navmenu'
    .col-md-3.col-xs-4
      .herbscontainer#herbscontainer
        .herbs#herbs
          .herbe#herbe.brew
          = render partial: 'brews', collection: @herbs, as: :brew
          = content_tag :div, "", id: "herb4", class: "brew", style: "background-color: " + @baseherb.color
        .pot#pot
          #potperc
      #descpopupcontainer
        #descriptionpopup
    .col-md-5.col-xs-7
      #sliders
        -# = form_tag jars_path do
        = form_for @jar do |f|
          .divTable.herbtab
            .divTableBody
              = render partial: 'sliders', collection: @herbs, as: :herb, locals: {f: f}
      = link_to content_tag(:div, "zam√≥w".html_safe + content_tag(:div, "", id: "ordercircle"), id: "orderbutton"), ''
:javascript
  $( document ).ready( function(){

  updatesliders();
  updateheights();

    $("#orderbutton").click(function () {
        orderbutton();
    });

  });

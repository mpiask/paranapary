- provide(:title, 'Herba lab' )
= render 'layouts/header'
.container
  = render 'layouts/navmenu'
  .content
    .herbs-img
      - @herbs.each do |herb|
        .herbblock
          = link_to image_tag("/images/herbs/" + herb.image, style: "border: 4px solid " + herb.color, onerror: "this.src='/images/empty.svg'"), { controller: "mix", action: "showherb", id: herb.id }
          %br/
          = CGI.unescapeHTML(herb.name)
    #descriptionpopup
.footer

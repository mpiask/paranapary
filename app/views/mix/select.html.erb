<%= render 'layouts/header' %>
<div class="container">
    <%= render 'layouts/navmenu' %>
    <div class="content">
        <div class="herbs-img">
            <div class="divTable" style="width: 120px;" >
                <div class="divTableBody">
                    <div class="divTableRow">
                        <% @baseherbs.each do |baseherb| %>
                        <div class="divTableCell"><%= link_to image_tag("herbs/" + baseherb.image, style: "border: 4px solid " + baseherb.color, onmouseover: "showherbdesc(\""+baseherb.description+"\", \""+baseherb.color+"\")", onmouseleave: "hide()"), { controller: "mix", action: "mix", id: baseherb.id } %> <br>
                        <%= baseherb.name %></div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
        <div id="descriptionpopup"></div>
    </div>
</div>
<div class="footer">

</div>
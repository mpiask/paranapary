- provide(:title, @herb.name.capitalize)
= render 'layouts/header'
.container
  = render 'layouts/navmenu'
  .content
    .herbs-img
      .herbblock
        = link_to image_tag("/images/herbs/" + @herb.image, style: "border: 4px solid " + @herb.color, onerror: "this.src='/images/empty.svg'"), '#'
        %br/
        = CGI.unescapeHTML(@herb.name)
    %p{:style => "text-align: center"} Tu napiszemy więcej o ziółkach.
.footer

<%= stylesheet_link_tag "compose" %>
   
<div class="mainheader">
    <%= render :partial => "header" %>
</div>
<div class="container">
    <div id="navmenu">
        <%= render :partial => "navmenu" %>
    </div>
    <div class="content">
        <div class="herbs-img">
            <% @herbs.each do |herb| %>
            <div class="herbblock"><%= link_to image_tag("/images/" + herb.image, style: "border: 4px solid " + herb.color, onerror: "this.src='/images/empty.svg'"), controller: "welcome", action: "show", id: herb.id %> <br>
            <%= CGI.unescapeHTML(herb.name) %></div>
            <% end %>
        </div>
        <div id="descriptionpopup"></div>
    </div>
</div>
<div class="footer">

</div>

<%= javascript_include_tag "compose" %>
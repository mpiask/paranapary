- provide(:title, 'Herba lab' )
= render 'layouts/header'
.container
  .content.row
    .col-md-2#navmenu
      = render 'layouts/navmenu'
    .col-md-8.col-md-offset-1
      .herbs-img
        - @herbs.each do |herb|
          .herbblock
            = link_to image_tag("/images/herbs/" + herb.image, style: "border: 4px solid " + herb.color, onerror: "this.src='/images/empty.svg'"), { controller: "static", action: "showherb", id: herb.id }
            %br/
            = herb.hname
      #descriptionpopup
.footer
